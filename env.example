# Database Configuration
DATABASE_URL=postgresql://changekeeper_user:changekeeper_password@db:5432/changekeeper

# Application Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Microsoft Entra ID (Azure AD) Configuration
# Leave blank if only using Google Workspace
ENTRA_CLIENT_ID=your-client-id-from-azure-portal
ENTRA_CLIENT_SECRET=your-client-secret-from-azure-portal
ENTRA_TENANT_ID=your-tenant-id-from-azure-portal
REDIRECT_URI=https://your-domain.com/auth/callback

# Google Workspace Configuration
# Leave blank if only using Microsoft Entra ID
GOOGLE_CLIENT_ID=your-client-id-from-google-cloud-console
GOOGLE_CLIENT_SECRET=your-client-secret-from-google-cloud-console

# Email Configuration (Optional - set ENABLE_EMAIL=true to activate)
ENABLE_EMAIL=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=changekeeper@example.com
